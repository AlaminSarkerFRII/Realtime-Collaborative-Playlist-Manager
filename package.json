{
  "name": "collaborative-playlist",
  "version": "1.0.0",
  "description": "Realtime Collaborative Playlist Manager",
  "private": true,
  "scripts": {
    "install:backend": "cd backend && pnpm install",
    "install:frontend": "cd frontend && pnpm install",
    "install:all": "pnpm run install:backend && pnpm run install:frontend",
    "dev:backend": "cd backend && pnpm run dev",
    "dev:frontend": "cd frontend && pnpm run dev",
    "build:backend": "cd backend && pnpm run db:generate && pnpm run db:migrate && pnpm run db:seed",
    "build:frontend": "cd frontend && pnpm run build",
    "test:backend": "cd backend && pnpm test",
    "db:seed": "cd backend && pnpm run db:seed",
    "db:migrate": "cd backend && pnpm run db:migrate",
    "db:generate": "cd backend && pnpm run db:generate",
    "db:setup": "pnpm run db:generate && pnpm run db:migrate && pnpm run db:seed",
    "start:backend": "cd backend && pnpm start",
    "start:frontend": "cd frontend && pnpm start"
  }
}

